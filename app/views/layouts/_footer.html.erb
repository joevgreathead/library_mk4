<%# FIXME: Hide this in small devices because it's just not possible to see %>
<div id="suggest-row" class="hidden-xs">
    <div class="member">
        <input id="suggest-btn" type="button" class="btn btn-default" value="Suggest a game title or idea!" />
        <div id="suggest-form" style="display: none;">
            <input id="cancel-suggest" type="button" class="btn btn-default" value="X" />
            <input id="save-suggest" type="button" class="btn btn-primary" value=">>" />
            <input id="suggest-title" placeholder="Suggest a game title or a library improvement idea here!" type="text" class="form-control" style="width: 35em;"/>
        </div>
    </div>
    <div class="member">
        <a href="/ReadMe.html" target="_blank" class="btn btn-default">Read the docs >></a>
    </div>
</div>

<footer data-event="<%= @current_event.short_name %>">
    <div class="col-xs-4">
        Longest open checkout from today: <span id="longest-open-checkout">00:03:05</span>
    </div>
    <div class="col-xs-4" style="text-align: center;">
        Welcome to <%= @current_event.formatted_name %>
    </div>
    <div class="col-xs-4" style="text-align: right;">
        <a href="/recent">
            <span id="open-checkouts">X</span> of <span id="total-games">X</span> games checked out
        </a>
    </div>
</footer>
